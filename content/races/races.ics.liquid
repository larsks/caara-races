{% assign sorted_races = races | sort: 'date' -%}
BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//CAARA Race Schedule//caara.org//
CALSCALE:GREGORIAN
METHOD:PUBLISH
X-WR-CALDESC:Half Marathon and Marathon Schedule
X-WR-CALNAME:CAARA Race Schedule 2026
{% for race in sorted_races -%}
BEGIN:VEVENT
SUMMARY:{{ race.title }}
DTSTART:{{ race.date | date: "%Y%m%dT%H%M%S", "UTC"}}Z
DTEND:{{ race.date | date: "%s" | plus: 10800 | date: "%Y%m%dT%H%M%S", "UTC"}}Z
DTSTAMP:{{ "now" | date: "%Y%m%dT%H%M%S", "UTC" }}Z
UID:{{ race.date | date: "%Y-%m-%d" | append: race.title | uuid }}@caara-schedule
DESCRIPTION:{{ race.title }}\nWhen: {{ race.date | date: "%b %d, %Y" }}\n
 Location: {{ race.location }}\n
 Start time: {{ race.date | date: "%H:%M %p"}}
LOCATION:{{ race.location }}
END:VEVENT
{% endfor -%}
END:VCALENDAR
