body {
  max-width: 1280px;
}

#header {
	height: 200px;
	border: thin solid black;

  background-image: url({{ "/image/race-background.png" | htmlBaseUrl }});
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;

  font-family: Lato, sans-serif;
  font-size: min(48px,4vw);
  font-weight: bold;
  color: white;

  padding: 1ex;

  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: black;
}

footer {
	border-top: thin solid black;
}

main {
}

#navigation {
  display: flex;
  background-color: #4078c0;
}

#navigation ul {
	list-style-type: none;
	margin: 0;
	background-color: #4078c0;
	padding: 1ex;
}

#navigation ul li {
	display: inline;
	border-left: thin solid white;
	padding: 5px;
}

#navigation ul li:first-child {
	border: none;
}

#navigation ul li a {
	color: white;
	text-decoration: none;
}

#navigation .left {
  flex-grow: 1;
}

.left {
  float: left;
}

.right {
  float: right;
}

@media print {
  .noprint {
    display: none;
  }

  #header {
    font-size: 24pt;
  }

  table {
    page-break-inside: auto;
  }
}
